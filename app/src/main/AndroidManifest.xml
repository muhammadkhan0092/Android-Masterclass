<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name=".hilt.app.AndroidMasterClassApplication"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidMasterclass"
        tools:targetApi="31">
        <activity
            android:name=".main.presentation.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".modules.room_db.views.RoomMainActivity"
            android:exported="false">
           </activity>

        <activity
            android:name=".modules.api_integration.presentation.views.ProductsActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".modules.firestore.presentation.views.activity.FirestoreMainActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".modules.firebase_realtime.presentation.views.activity.FirebaseMainActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>